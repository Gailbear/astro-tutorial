---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";

const pageTitle = "About Me";

const identity = {
  firstName: "Gail",
  pronouns: "she/they",
  country: "USA",
  occupation: "Software Engineer",
  hobbies: ["singing", "volunteering", "watching the Red Sox", "fiber arts"],
};

const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "Typescript",
  "Python",
  "Ruby",
  "AngularJS",
  "Angular",
  "Vue",
  "Ruby on Rails",
  "Django",
  "Java",
];

const finished = true;

const skillColor = "magenta";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <h2>... and my new Astro site!</h2>

  <p>
    I am working through Astro's indructory tutorial. This is the second page on
    my website, and it's the first one I build myself!
  </p>

  <p>
    This site will update as I complete more of the tutorial, so keep checking
    back and see how my journey is going!
  </p>

  <p>Here are a few facts about me:</p>
  <ul>
    <li>
      My name is {identity.firstName} and I use {identity.pronouns} pronouns.
    </li>
    <li>
      I live in {identity.country} and I work as a {identity.occupation}.
    </li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}
          .
        </li>
      )
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  {
    finished ? (
      <p>I have finished the tutorial!</p>
    ) : (
      <p>I have not yet finished the tutorial.</p>
    )
  }
</BaseLayout>

<style define:vars={{ skillColor, fontWeight, textCase }}>
  .skill {
    color: var(--skillColor);
    font-weight: var(--fontWeight);
    text-transform: var(--textCase);
  }
</style>
